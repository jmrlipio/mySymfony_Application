{% extends '::base.html.twig' %}

{% block title %}Contact{% endblock%}
 {% block body %}
	
	<div class="span12 offset1">
		
	{% for flashMessage in app.session.flashbag.get('blogger-notice') %}
		{{ flashMessage }}
	{% endfor %}
		
		<h1>This is a Contact us page</h1>
		
		<form action="{{ path('contact-us') }}" method="post" {{ form_enctype(form) }} class="blogger">
	        {{ form_errors(form) }}
	
	        {{ form_row(form.name) }}
	        {{ form_row(form.email) }}
	        {{ form_row(form.subject) }}
	        {{ form_row(form.body) }}
	
	        {{ form_rest(form) }}
	
	        <input type="submit" value="Submit" />
	    </form>
	</div>
	

	
 {% endblock %}
