<!-- app/Resources/views/base.html.twig -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<meta http-equiv="X-UA-Compatible" content="IE=edge"> 
        <title>{% block title %}Blog Post{% endblock %}</title>

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
        
		<link href="{{ asset('bundles/joneblog/css/main.css') }}" rel="stylesheet" />		
		<link rel="stylesheet" type="text/css" href="{{ asset('bundles/joneblog/css/slider.css') }}"  />
		<link rel="stylesheet" type="text/css" href="{{ asset('bundles/joneblog/css/normalize.css') }}"  />		
		<link rel="stylesheet" type="text/css" href="{{ asset('bundles/joneblog/css/demo.css') }}"  />
		<link rel="stylesheet" type="text/css" href="{{ asset('bundles/joneblog/css/component.css') }}"  />			 
		<link rel="stylesheet" href="{{ asset('bundles/joneblog/bootstrap/css/bootstrap.min.css') }}"/> 
		 <noscript>
			<link rel="stylesheet" type="text/css" href="css/nojs.css" />
		</noscript> 
      {% endblock %}
      
    </head>
    <body>
		<section id="wrapper">
			
		<!-- <div id="logo">
			<img src="/bundles/joneblog/images/logo.png" />
			<h3> Nulla e reale; tutto e lecito </h3>
		</div>			 -->				 		
		<header>	
		{% block navigation %}		
			<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
			      <div class="container">
			        <div class="navbar-header">				         
			            <span class="icon-bar"></span>
			            <span class="icon-bar"></span>
			            <span class="icon-bar"></span>
			          
			          <a class="navbar-brand" href="#">mySymfony</a>
			        </div>
			        <div class="navbar-collapse collapse">
			        	
			        	    <ul class="nav navbar-nav pull-right">
						        <li class="active"><a id="home" href="{{path('JoneBlogBundle_homepage') }}">Home</a></li>
								<li><a id="property" href="{{ path('property') }}">Properties</a></li>	
								<li><a id="gallery" href="{{ path('gallery') }}">Gallery</a></li>	
								<li><a id="aboutus" href="{{ path('about-us') }}">About us</a></li>
								<li><a id="contactus" href="{{ path('contact-us') }}">Contact us</a></li>	
								<li><a id="blogs" href="{{ path('post') }}">Blogs</a></li>								        
						      </ul>		        	
			        </div><!--/.navbar-collapse -->
			      </div>			
			</div>
		{% endblock %}									
		</header>
			
			
				{% block body %}{% endblock %}	
			
								
		</section> <!-- End of wrapper -->
					
        {% block javascripts %}			
			<script src="{{ asset('bundles/joneblog/js/jquery.js') }}"></script>
			<script src="{{ asset('bundles/joneblog/bootstrap/js/bootstrap.min.js') }}"></script>
			<script src="{{ asset('bundles/joneblog/js/modernizr.custom.js') }}"></script>
			
			 <!--[if lt IE 9]-->
			<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
			  <!--[endif]-->

        {% endblock %}
    </body>
</html>
